<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Complete Your Booking</h1>
    <p class="text-gray-600 mb-8">Enter passenger details to finalize your flight reservation</p>
    
    <%= form_with(model: @booking, class: "space-y-6") do |form| %>
      <div class="space-y-6">
        <%= form.fields_for :passengers do |passenger_form| %>   
          <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Passenger Information</h3>
            <div class="space-y-4">
              <div>
                <%= passenger_form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= passenger_form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "John Doe" %>
              </div>
              <div>
                <%= passenger_form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= passenger_form.text_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "john@example.com" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <%= form.hidden_field :flight_id %>
      
      <%= form.submit "Confirm Booking", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200" %>
    <% end %>
  </div>
</div>