<div class="space-y-8">
  <!-- Search Form -->
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Find & Book Flights</h1>
    
    <%= form_with url: "/flights", method: :get, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <%= form.label :departure_airport_id, "From", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag(:departure_airport_id, options_for_select(@airports), class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent") %>
        </div>
        <div>
          <%= form.label :arrival_airport_id, "To", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag(:arrival_airport_id, options_for_select(@airports), class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent") %>
        </div>
        <div>
          <%= form.label :departure_date, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :departure_date, options_for_select(@departure_dates), { include_blank: "Any date", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
        </div>
        <div>
          <%= form.label :num_tickets, "Passengers", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag(:num_tickets, options_for_select([1,2,3,4]), class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent") %>
        </div>
      </div>
      
      <%= form.submit "Search Flights", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200" %>
    <% end %>
  </div>

  <!-- Flight Results -->
  <% if @flight_search_results %>
    <div class="bg-white rounded-lg shadow-md p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Available Flights</h2>
      
      <%= form_with url: new_booking_path, method: :get, class: "space-y-4" do |form| %>
        <%= form.hidden_field :num_tickets, value: params[:num_tickets] %>
        
        <div class="space-y-4">
          <% @flight_search_results.each do |flight| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition">
              <label class="flex items-center cursor-pointer p-2">
                <%= form.radio_button :flight_id, flight.id, { required: true, class: "w-4 h-4 text-blue-600" } %>
                <div class="ml-4 flex-1">
                  <div class="flex justify-between items-center">
                    <div>
                      <p class="font-semibold text-gray-900"><%= flight.departure_airport.name %> â†’ <%= flight.arrival_airport.name %></p>
                      <p class="text-sm text-gray-500"><%= flight.departure_date.strftime('%A, %B %d, %Y') %></p>
                    </div>
                    <p class="text-lg font-bold text-blue-600">$<%= flight.price || 150 %></p>
                  </div>
                </div>
              </label>
            </div>
          <% end %>
        </div>
        
        <%= form.submit "Continue to Booking", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 mt-6" %>
      <% end %>
    </div>
  <% end %>
</div>

