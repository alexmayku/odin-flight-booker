<h1>Search Flights</h1>

<%= form_with url: "/flights", method: :get do |form| %>
  <%= form.label :query, "From:" %>
    <%= select_tag(:departure_airport_id, options_for_select(@airports)) %><br>
<%= form.label :query, "To:" %>
    <%= select_tag(:arrival_airport_id, options_for_select(@airports)) %> 
    <%= form.label :query, "Date:" %>
    <%= select_tag :departure_date,
      options_for_select(@departure_dates),
      include_blank: "Any date" %>
    <%= form.label :query, "Passengers:" %>
    <%= select_tag(:num_tickets, options_for_select([1,2,3,4])) %>
  <br>
  <br>
  <%= form.submit "Search" %>
<% end %>
  <br>
  <br>
<% if @flight_search_results%>
  <%= form_with url: new_booking_path, method: :get do |form| %>
  <%= form.hidden_field :num_tickets, value: params[:num_tickets] %>
  <%= form.collection_radio_buttons :flight_id, @flight_search_results, :id, :description, { required: true } %>
  <%= form.submit "Select flight" %>  
  <%end%>
    

<% end %>

